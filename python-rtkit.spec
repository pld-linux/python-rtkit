#
# Conditional build:
%bcond_without	doc		# don't build doc
%bcond_without	tests	# do not perform "make test"
%bcond_without	python2 # CPython 2.x module
%bcond_without	python3 # CPython 3.x module

%define 	module	rtkit
Summary:	Request Tracker data access for REST interface
Name:		python-%{module}
Version:	0.7.0
Release:	1
License:	Apache v2.0
Group:		Libraries/Python
Source0:	https://github.com/z4r/python-rtkit/archive/%{version}.tar.gz
# Source0-md5:	676b715bd843181dc27c14b0700b30af
URL:		http://z4r.github.io/python-rtkit/
BuildRequires:	rpmbuild(macros) >= 1.219
BuildRequires:	sphinx-pdg
%if %{with python2}
BuildRequires:	python-devel
BuildRequires:	python-distribute
%endif
%if %{with python3}
BuildRequires:	python3-devel
BuildRequires:	python3-distribute
BuildRequires:	python3-modules
%endif
Requires:	python-modules
BuildArch:	noarch
BuildRoot:	%{tmpdir}/%{name}-%{version}-root-%(id -u -n)

%description
Best Practical RT (Request Tracker) data access python module for REST
interface.

%package -n python3-%{module}
Summary:	Request Tracker data access for REST interface
Group:		Libraries/Python
Requires:	python3-modules

%description -n python3-%{module}
Best Practical RT (Request Tracker) data access python module for REST
interface.

%package apidocs
Summary:	%{module} API documentation
Summary(pl.UTF-8):	Dokumentacja API %{module}
Group:		Documentation

%description apidocs
API documentation for %{module}.

%description apidocs -l pl.UTF-8
Dokumentacja API %{module}.

%prep
%setup -q

%build
%if %{with python2}
%{__python} setup.py build --build-base build-2 %{?with_tests:test}
%endif

%if %{with python3}
%{__python3} setup.py build --build-base build-3 %{?with_tests:test}
%endif

%if %{with doc}
cd docs
%{__make} -j1 html
rm -rf _build/html/_sources
%endif

%install
rm -rf $RPM_BUILD_ROOT

%if %{with python2}
%{__python} setup.py \
	build --build-base build-2 \
	install --skip-build \
	--optimize=2 \
	--root=$RPM_BUILD_ROOT

%py_postclean
%endif

%if %{with python3}
%{__python3} setup.py \
	build --build-base build-3 \
	install --skip-build \
	--optimize=2 \
	--root=$RPM_BUILD_ROOT
%endif

%clean
rm -rf $RPM_BUILD_ROOT

%if %{with python2}
%files
%defattr(644,root,root,755)
%doc README.rst
%dir %{py_sitescriptdir}/rtkit
%{py_sitescriptdir}/rtkit/*.py[co]
%{py_sitescriptdir}/rtkit/tests
%if "%{py_ver}" > "2.4"
%{py_sitescriptdir}/python_%{module}-%{version}-py*.egg-info
%endif
%endif

%if %{with python3}
%files -n python3-%{module}
%defattr(644,root,root,755)
%doc README.rst
%{py3_sitescriptdir}/%{module}
%{py3_sitescriptdir}/python_%{module}-%{version}-py*.egg-info
%endif

%if %{with doc}
%files apidocs
%defattr(644,root,root,755)
%doc docs/_build/html/*
%endif
